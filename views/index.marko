<include('./_layout')>
  <@body>
    <div id="message" class="hidden">&nbsp;</div>
    <div class="frame">
      <div class="content">
        <header>
          <a href="/">2short.net</a>
        </header>
        <h1>Enter a link</h1>
        <form>
          <input id="link" type="text" autofocus="true"/>
          <input id="send" type="submit" value=""/>
        </form>
      </div>
      <div id="result" class="content hidden">
        <h1>Your short-link</h1>
        <input id="short" type="text" value=data.link readonly="true"/>
        <span>The link will expire if not used for 30 days.</span>
      </div>
    </div>
  </@body>
</include>
